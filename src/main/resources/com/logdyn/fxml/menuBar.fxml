<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>


<?import javafx.scene.control.SeparatorMenuItem?>
<MenuBar xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.logdyn.MenuBarController" fx:id="menuBar">
    <Menu mnemonicParsing="false" text="File">
        <MenuItem mnemonicParsing="false" text="New" onAction="#newFile"/>
        <MenuItem mnemonicParsing="false" text="Open..." onAction="#open"/>
        <MenuItem mnemonicParsing="false" text="Close" onAction="#close"/>
        <SeparatorMenuItem/>
        <MenuItem mnemonicParsing="false" text="Save" onAction="#save"/>
        <MenuItem mnemonicParsing="false" text="Save As..." onAction="#saveAs"/>
        <MenuItem mnemonicParsing="false" text="Save All" onAction="#saveAll"/>
        <SeparatorMenuItem/>
        <MenuItem mnemonicParsing="false" text="Exit" onAction="#exit"/>
    </Menu>
    <Menu mnemonicParsing="false" text="Edit">
        <MenuItem mnemonicParsing="false" text="Undo" onAction="#undo"/>
        <MenuItem mnemonicParsing="false" text="Redo" onAction="#redo"/>
        <SeparatorMenuItem/>
        <MenuItem mnemonicParsing="false" text="Find &amp; Replace..." onAction="#find"/>
        <SeparatorMenuItem/>
        <MenuItem mnemonicParsing="false" text="Preferences..." onAction="#preferences"/>
    </Menu>
    <Menu mnemonicParsing="false" text="Help">
        <MenuItem mnemonicParsing="false" text="About..." onAction="#about"/>
    </Menu>
</MenuBar>
